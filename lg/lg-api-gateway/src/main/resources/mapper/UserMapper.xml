<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace= "com.ny.lg.api.dao.UserMapper" >

    <select id="findSecurityUserByUser" resultType="com.ny.lg.api.pojo.UserContext">
        SELECT
                  id
                  ,username
         FROM
                  user
        WHERE
                  username = #{username}
          AND
                  password = #{password}
    </select>
</mapper>